<h3 class="title is-3">Office #{{id}}</h3>
<form>
	<label class="label">Name</label>
	<p class="control">
		<input class="input" name="name" type="text" placeholder="Enter Name" />
	</p>
	<label class="label">Office</label>
	<p class="control">
		<span class="select">
	  		<select name="office"></select>
  		</span>
	</p>
	<p class="control">
		<button type="submit" class="button is-primary" data-ui-name="save">Submit</button>
		<button type="button" class="button is-info is-outlined" data-ui-name="cancel">Cancel</button>
		<button type="button" class="button is-danger" data-ui-name="delete">Delete</button>
		<span class="not-synced-alert fa fa-exclamation-triangle" title="This entity is not synced with the server."></span>
	</p>
</form>
