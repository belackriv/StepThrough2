<h2 class="title is-2">Inventory Audit</h2>
<div class="message">
	<div class="message-header">
		For Bin #{{forBin.id}} - {{forBin.attributes.name}}
	</div>
	<div class="message-body">
		<p>Started by {{byUser.attributes.firstName}} {{byUser.attributes.lastName}} at {{moment startedAt}}.</p>
		<button class="button" name="end">End</button>
	</div>
</div>
<div class="box">
	<h3 class="title is-3">Traveler Ids</h3>
	<form data-ui="travelerIdLabelForm" action="">
		<label class="label">Traveler Id Label:</label>
		<p class="control">
			<input type="text" name="travelerIdLabel" />
		</p>
		<button type="submit" class="button" name="addTravelerId">Add Traveler Id</button>
	</form>
	<table data-ui="travelerIdListTable" class="table is-striped">
		<thead>
			<tr>
				<th>Traveler Id</th>
				<th></th>
			</tr>
		</thead>
		<tbody></tbody>
	</table>
</div>
<div class="box">
	<h3 class="title is-3">Sales Items</h3>
	<form data-ui="salesItemLabelForm" action="">
		<label class="label">Sales Item Label:</label>
		<p class="control">
			<input type="text" name="salesItemLabel" />
		</p>
		<button type="submit" class="button" name="addSalesItem">Add Sales Item</button>
	</form>
	<table data-ui="salesItemListTable" class="table is-striped">
		<thead>
			<tr>
				<th>Sales Item</th>
				<th></th>
			</tr>
		</thead>
		<tbody></tbody>
	</table>
</div>
<div class="box">
	<h3 class="title is-3">SKU Counts</h3>
	<button class="button" name="addSkuAudit">Add SKU Count</button>
	<table data-ui="skuListTable" class="table is-striped">
		<thead>
			<tr>
				<th>SKU</th>
				<th>Count</th>
				<th colspan="2"></th>
			</tr>
		</thead>
		<tbody></tbody>
	</table>
</div>