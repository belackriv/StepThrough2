<h3 class="title is-3">Part #{{id}}</h3>
<form>
	<label class="label">Name</label>
	<p class="control">
		<input class="input" name="name" type="text" placeholder="Enter Name">
	</p>
	<label class="label">Manufacturer</label>
	<p class="control">
		<input class="input" name="manufacturer" type="text" placeholder="Enter Manufacturer">
	</p>
	<label class="label">Model</label>
	<p class="control">
		<input class="input" name="model" type="text" placeholder="Enter Model">
	</p>
	<label class="label">Description</label>
	<p class="control">
		<textarea class="textarea" name="description" placeholder="Enter Description"></textarea>
	</p>
	<label class="label">Image</label>
	<p class="control">
		<div class="si-uploaded-img-figure-container" style="width:{{image.attributes.width}}px;">
			<figure class="image {{getAspectRatioClass image.attributes.width image.attributes.height}}">
				{{#if image }}
					<img width="{{image.attributes.width}}" height="{{image.attributes.height}}" src="/image/{{image.id}}/src" />
				{{/if}}
			</figure>
		</div>
		<button type="button" class="button is-secondary is-outlined" data-ui-name="upload">Upload Image</button>
	</p>
	<p class="control">
	  	<label class="checkbox">
	    	<input name="isActive" type="checkbox">
	    	Is Active?
	  	</label>
	</p>
	<p class="control">
		<button type="submit" class="button is-primary" data-ui-name="save">Submit</button>
		<button type="button" class="button is-info is-outlined" data-ui-name="cancel">Cancel</button>
		<button type="button" class="button is-danger" data-ui-name="delete">Delete</button>
		<span class="not-synced-alert fa fa-exclamation-triangle" title="This entity is not synced with the server."></span>
	</p>
</form>