<h3 class="title is-3">
{{#unless id}}New {{/unless}}
InboundOrder
{{#if id}}
	#{{id}}[{{label}}]
{{/if}}
</h3>
<form>
	<label class="label">Description</label>
	<p class="control">
		<textarea class="textarea" name="description" placeholder="Enter Description"></textarea>
	</p>
	<p class="control">
	  	<label class="checkbox">
	    	<input name="isVoid" type="checkbox">
	    	Is Void?
	  	</label>
	</p>
	<label class="label">Client</label>
	<p class="control">
		<span class="select">
	  		<select name="client"></select>
  		</span>
	</p>
	<label class="label">Expected At</label>
	<p class="control">
		<input name="expectedAt" type="date" />
	</p>
	<p class="control">
		<button type="submit" class="button is-primary" data-ui-name="save">Submit</button>
		<button type="button" class="button is-info is-outlined" data-ui-name="cancel">Cancel</button>
		<button type="button" class="button is-danger" data-ui-name="delete">Delete</button>
		<button type="button" class="button" data-ui-name="showManifest">Show Manifest</button>
		<button type="button" class="button{{#if isReceived}} is-disabled{{/if}}" {{#if isReceived}}disabled{{/if}} data-ui-name="receiveOrder">Receive Order</button>
		<span class="not-synced-alert fa fa-exclamation-triangle" title="This entity is not synced with the server."></span>
	</p>
</form>
