<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}StepThrough{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/font-awesome.min.css') }}"/>
            <link rel="stylesheet" href="{{ asset('assets/lib/css/stepthrough.css') }}"/>
        {% endblock %}
        {% block favicon %}<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />{% endblock %}
    </head>
    <body>
    	<div id="content">{% block content %}{% endblock %}</div>
         {% block jspm %}
            <script src="{{ asset('assets/jspm_packages/system.js') }}"></script>
            <script src="{{ asset('assets/jspm.browser.js') }}"></script>
            <script src="{{ asset('assets/jspm.config.js') }}"></script>
            <script>
                System.import('lib/main.js');
            </script>
        {% endblock %}
    </body>
</html>
