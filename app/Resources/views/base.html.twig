<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Step Inventory{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/step-inventory.css') }}"/>
            <link href="//fonts.googleapis.com/css?family=Open+Sans:400,700,300" rel="stylesheet" type="text/css">
            <link href="//fonts.googleapis.com/css?family=Rambla" rel="stylesheet" type="text/css">
        {% endblock %}
        {% block favicon %}<link rel="icon" type="image/x-icon" href="{{ asset('favicon.png?v=2') }}" />{% endblock %}
        {% block stripejs %}<script src="https://js.stripe.com/v3/" async></script>{% endblock %}
    </head>
    <body>
    	<div id="app">
            {% block content %}
                {{ include('partial/loading.html.twig') }}
            {% endblock %}
        </div>
         {% block jspm %}
            <script src="{{ asset('assets/jspm_packages/system.js') }}"></script>
            <script src="{{ asset('assets/jspm.browser.js') }}"></script>
            <script src="{{ asset('assets/jspm.config.js') }}"></script>
            {% if app.environment == 'dev' %}
                <script src="{{ asset('assets/deps.js') }}"></script>
            {% else %}
                <script src="{{ asset('assets/main-bundle.js') }}"></script>
            {% endif %}
            <script>
                System.import('lib/main.js');
            </script>
        {% endblock %}
    </body>
</html>
