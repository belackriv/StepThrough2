<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Step Inventory{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/font-awesome.min.css') }}"/>
            <link rel="stylesheet" href="{{ asset('assets/css/bulma.css') }}"/>
            <link rel="stylesheet" href="{{ asset('assets/lib/css/step-inventory.css') }}"/>
        {% endblock %}
        {% block favicon %}<link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}" />{% endblock %}
    </head>
    <body>
    	<div id="content">
            {% block content %}
                {{ include('partial/loading.html.twig') }}
            {% endblock %}
        </div>
         {% block jspm %}
            <script src="{{ asset('assets/jspm_packages/system.js') }}"></script>
            <script src="{{ asset('assets/jspm.browser.js') }}"></script>
            <script src="{{ asset('assets/jspm.config.js') }}"></script>
            <script src="{{ asset('assets/deps.js') }}"></script>
            {% if app.environment == 'prod' %}
                <script src="{{ asset('assets/main-bundle.js') }}"></script>
            {% endif %}
            <script>
                System.import('lib/main.js');
            </script>
        {% endblock %}
    </body>
</html>
